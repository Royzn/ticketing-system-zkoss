<?init class="org.zkoss.zk.ui.util.Composition" arg0="template.zul" ?>
<zk>
    <window self="@define(content)"
            apply="latihan.controller.DashboardController">
        <vlayout spacing="20px" style="padding:20px;">

            <!-- Header -->
            <label value="ðŸ“Š Dashboard Ticketing System"
                   style="font-weight:bold; font-size:22px; color:#2c3e50;"/>

            <hbox spacing="20px">
                <!-- Status Card -->
                <groupbox title="Tickets by Status" width="250px" mold="3d"
                          style="background:#ffffff; border-radius:10px;">
                    <vlayout spacing="5px" style="padding:10px;">
                        <label id="lblOpen" style="color:green; font-weight:bold;" value="Open: 0"/>
                        <label id="lblInProgress" style="color:orange; font-weight:bold;" value="In Progress: 0"/>
                        <label id="lblClosed" style="color:red; font-weight:bold;" value="Closed: 0"/>
                    </vlayout>
                </groupbox>

                <!-- Priority Card -->
                <groupbox title="Tickets by Priority" width="250px" mold="3d"
                          style="background:#ffffff; border-radius:10px;">
                    <vlayout spacing="5px" style="padding:10px;">
                        <label id="lblLow" style="color:green; font-weight:bold;" value="Low: 0"/>
                        <label id="lblMedium" style="color:orange; font-weight:bold;" value="Medium: 0"/>
                        <label id="lblHigh" style="color:#c0392b; font-weight:bold;" value="High: 0"/>
                    </vlayout>
                </groupbox>
            </hbox>

            <!-- Recent Tickets -->
            <groupbox title="ðŸ“Œ Recent Tickets" mold="3d" width="100%"
                      style="background:#ffffff; border-radius:10px;">
                <grid id="recentGrid" width="100%">
                    <columns>
                        <column label="ID" width="50px" style="background:#3498db; color:white; font-weight:bold;"/>
                        <column label="Title" style="background:#3498db; color:white; font-weight:bold;"/>
                        <column label="Status" style="background:#3498db; color:white; font-weight:bold;"/>
                        <column label="Priority" style="background:#3498db; color:white; font-weight:bold;"/>
                    </columns>
                    <rows id="recentRows"/>
                </grid>
            </groupbox>
        </vlayout>
    </window>
</zk>
