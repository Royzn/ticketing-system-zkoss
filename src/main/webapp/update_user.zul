<?init class="org.zkoss.zk.ui.util.Composition" arg0="template.zul" ?>

<zk>
    <window self="@define(content)" width="550px" apply="org.zkoss.bind.BindComposer" viewModel="@id('vm') @init('latihan.viewmodel.UserFormViewModel')">
        <vlayout spacing="25px" style="padding:5px;">

            <!-- Header -->
            <label value="Update User Form"
                   style="font-weight:bold; font-size:22px; color:#2c3e50;"/>
            <label value="Fill in the ticket information below"
                   style="color:#7f8c8d; font-size:14px; margin-bottom:10px;"/>

            <!-- Form Field -->
            <grid width="100%">
                <columns>
                    <column width="120px"/>
                    <column width="*"/>
                </columns>
                <rows>
                    <row>
                        <label value="Name:" style="font-weight:bold; text-align:right;" width="120px"/>
                        <textbox value="@bind(vm.name)" width="325px" placeholder="Enter User Name"/>
                    </row>
                    <row>
                        <label value="Role:" style="font-weight:bold; text-align:right;" width="120px"/>
                        <combobox model="@load(vm.roleOptions)"
                                  selectedItem="@bind(vm.selectedRole)"
                                  placeholder="Select role" autodrop="true" readonly="true">
                            <template name="model" var="role">
                                <comboitem label="@load(role.label)" value="@load(role.value)" />
                            </template>
                        </combobox>
                    </row>
                    <row>
                        <label value="Username:" style="font-weight:bold; text-align:right;" width="120px"/>
                        <textbox value="@bind(vm.username)" width="325px" placeholder="Enter Username"/>
                    </row>
                    <row>
                        <label value="Password:" style="font-weight:bold; text-align:right;" width="120px"/>
                        <textbox value="@bind(vm.password)" width="325px" placeholder="Enter Password"/>
                    </row>
                </rows>
            </grid>

            <!-- Action Buttons -->
            <hlayout spacing="15px" style="margin-top:15px; justify-content:center;">
                <button label="ðŸ’¾ Update"
                        onClick="@command('update')"
                        style="background:#2ecc71; color:white; font-weight:bold; border:none;
                               padding:8px 20px; border-radius:6px;"/>
                <button label="âŒ Cancel" onClick="@command('cancel')"
                        style="background:#e74c3c; color:white; font-weight:bold; border:none;
                               padding:8px 20px; border-radius:6px;"/>
            </hlayout>
        </vlayout>
    </window>
</zk>