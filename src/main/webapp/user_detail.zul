<?init class="org.zkoss.zk.ui.util.Composition" arg0="template.zul" ?>

<zk>
    <window self="@define(content)" border="none" apply="org.zkoss.bind.BindComposer"
            viewModel="@id('vm') @init('latihan.viewmodel.UserDetailViewModel')">
        <div style="height:100%; overflow:auto; padding:20px;">
            <vlayout spacing="20px">
                <!-- Judul -->
                <label value="User Detail"
                       style="font-weight:bold; font-size:22px; color:#2c3e50;"/>

                <!-- Info Ticket -->
                <groupbox mold="3d" width="100%" style="background:#ffffff; border-radius:10px;" visible="@load(!empty vm.user)">
                    <caption label="User Information" style="font-weight:bold; color:#2c3e50;"/>
                    <grid width="700px" style="padding:15px;">
                        <rows>
                            <row>
                                <label value="User ID:" style="font-weight:bold; width:150px;"/>
                                <label value="@load(vm.userId)"/>
                            </row>
                            <row>
                                <label value="Name:" style="font-weight:bold;"/>
                                <label value="@load(vm.name)"/>
                            </row>
                            <row>
                                <label value="Username:" style="font-weight:bold;"/>
                                <label value="@load(vm.username)"/>
                            </row>
                            <row>
                                <label value="Role:" style="font-weight:bold;"/>
                                <label value="@load(vm.role)"/>
                            </row>
                            <row>
                                <label value="Created Date:" style="font-weight:bold;"/>
                                <label value="@load(vm.createdAt)"/>
                            </row>
                        </rows>
                    </grid>
                </groupbox>

                <div visible="@load(empty vm.user)" style="padding:20px; text-align:center;">
                    <label value="User not found." style="font-size:16px; color:red;"/>
                </div>

                <!-- Action Buttons -->
                <hlayout spacing="10px">
                    <button label="⬅ Back"
                            href="users.zul"
                            tooltiptext="Go back to user list"
                            style="background-color:#007bff; color:white; border-radius:6px;"/>
                    <button label="✏ Edit" onClick="@command('edit')"
                            tooltiptext="Update user data"
                            visible="@load(!empty vm.user)"
                            style="background:#f39c12; color:white; border-radius:6px;"/>
                    <button label="🗑 Delete" onClick="@command('delete')"
                            visible="@load(!empty vm.user)"
                            style="background:#e74c3c; color:white; border-radius:6px;" />
                </hlayout>
            </vlayout>
        </div>
    </window>
</zk>
