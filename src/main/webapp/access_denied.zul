<?xml version="1.0" encoding="UTF-8"?>
<zk>
    <style>
        .error-title {
        font-weight: bold;
        font-size: 22px;
        color: #e74c3c;
        text-align: center;
        }
        .error-subtitle {
        color: #7f8c8d;
        font-size: 14px;
        text-align: center;
        }
        .btn {
        font-weight: bold;
        border: none;
        padding: 10px;
        border-radius: 6px;
        }
        .btn-login {
        background: #3498db;
        color: white;
        }
        .btn-dashboard {
        background: #2ecc71;
        color: white;
        }
    </style>

    <vlayout width="100%" height="100%"
             style="display:flex; justify-content:center; align-items:center; background:#f4f6f9;">

        <window border="normal" width="420px"
                style="border-radius:12px; background:#ffffff; box-shadow:0 2px 8px rgba(0,0,0,0.1);">

            <vlayout spacing="15px" style="padding:25px; text-align:center;">

                <!-- Icon + Title -->
                <label value="🚫 Access Denied" sclass="error-title"/>
                <label value="You don’t have permission to access this page."
                       sclass="error-subtitle"/>

                <!-- Buttons -->
                <hlayout spacing="10px" width="100%" style="margin-top:15px; justify-content:center;">
                    <button label="🔑 Login" href="login.zul"
                            sclass="btn btn-login" hflex="1"/>
                    <button label="🏠 Dashboard" href="dashboard.zul"
                            sclass="btn btn-dashboard" hflex="1"/>
                </hlayout>

            </vlayout>
        </window>
    </vlayout>
</zk>
