<?xml version="1.0" encoding="UTF-8"?>
<zk>
    <style>
        .menu-link {
        display: block;
        padding: 10px 15px;
        margin-bottom: 5px;
        color: #333;
        text-decoration: none;
        font-weight: 500;
        border-radius: 5px;
        }

        .menu-link:hover {
        background-color: #e2e6ea;
        }

        .menu-link.active {
        background-color: #007bff;
        color: white;
        }

        .sidebar {
        background-color: #f8f9fa;
        height: 100%;
        padding: 20px;
        }

        .content {
        padding: 25px;
        background: #ffffff;
        height: 100%;
        overflow: auto;
        }
    </style>

    <window apply="org.zkoss.bind.BindComposer"
            viewModel="@id('tvm')@init('latihan.TemplateViewModel')"
            border="none"
            width="100%" height="100%">

        <borderlayout width="100%" height="100%">

            <!-- Sidebar -->
            <west border="none" collapsible="true" splittable="true">
                <vlayout sclass="sidebar" spacing="10px">
                    <label value="📋 Menu" style="font-size:18px; font-weight:bold;" />

                    <a href="dashboard.zul" sclass="@load(tvm.dashboardClass)">🏠 Dashboard</a>
                    <a href="tickets.zul" sclass="@load(tvm.ticketsClass)">🎫 Tickets</a>
                    <a href="ticket_form.zul" sclass="@load(tvm.formClass)">📝 Create Ticket</a>
                    <a href="users.zul" sclass="@load(tvm.usersClass)">👥 Users</a>
                </vlayout>
            </west>

            <!-- Main Content -->
            <center border="none">
                <div sclass="content" self="@insert(content)">
                    <!-- Page content loads here -->
                </div>
            </center>

        </borderlayout>
    </window>
</zk>
